---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Kopi Senja | Kedai Kopi Lokal",
  description = "Halaman promosi kedai kopi dengan menu pilihan dan suasana nyaman.",
} = Astro.props;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <slot />
  </body>
</html>
