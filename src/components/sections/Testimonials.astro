---
import type { Testimonial } from "../../types/landing";

interface Props {
  items: Testimonial[];
}

const { items } = Astro.props;

const stars = (count: number) => "★".repeat(count) + "☆".repeat(5 - count);
---

<section id="testimoni" aria-labelledby="judul-testimoni">
  <h2 id="judul-testimoni">Apa Kata Pelanggan</h2>
  <ul>
    {items.map((item) => (
      <li>
        <article>
          <p aria-label={`Rating ${item.rating} dari 5`}>{stars(item.rating)}</p>
          <blockquote>
            <p>{item.quote}</p>
          </blockquote>
          <footer>
            <strong>{item.name}</strong>
            <p>{item.role}</p>
          </footer>
        </article>
      </li>
    ))}
  </ul>
</section>
