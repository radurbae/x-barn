---
import type { MenuItem } from "../../types/landing";

interface Props {
  items: MenuItem[];
}

const { items } = Astro.props;

const rupiah = new Intl.NumberFormat("id-ID", {
  style: "currency",
  currency: "IDR",
  maximumFractionDigits: 0,
});

const fallbackImageById: Record<string, string> = {
  "chicken-nanban-ricebowl": "/images/menu-chicken-nanban.svg",
  "spaghetti-carbonara": "/images/menu-carbonara.svg",
  "nasi-goreng-seafood": "/images/menu-nasi-goreng.svg",
};
---

<section
  id="menu"
  class="section-shell relative bg-[color:var(--surface)] pt-24 sm:pt-28"
  aria-labelledby="judul-menu"
>
  <div class="container-shell">
    <div class="max-w-2xl">
      <p class="eyebrow">Pilihan populer</p>
      <h2 id="judul-menu" class="section-title mt-4">Menu Warunk WOW KWB</h2>
      <div class="section-divider mt-5"></div>
      <p class="section-copy">
        Kurasi menu andalan untuk nongkrong modern, dari rice bowl signature
        hingga sajian western favorit pengunjung.
      </p>
    </div>

    <ul class="mt-12 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {items.map((item) => (
        <li>
          <article
            class="menu-card surface-card flex h-full flex-col overflow-hidden p-0 transition duration-300 hover:-translate-y-1"
          >
            <img
              src={item.image}
              alt={`Foto ${item.name}`}
              width="320"
              height="210"
              loading="lazy"
              class="menu-image"
              onerror={`this.onerror=null;this.src='${fallbackImageById[item.id] ?? "/images/menu-nasi-goreng.svg"}';`}
            />
            <div class="flex h-full flex-col p-6">
              <p
                class="w-fit rounded-full bg-[var(--accent-soft)] px-3 py-1 text-xs font-semibold uppercase tracking-[0.1em] text-[var(--accent)]"
              >
                {item.tag}
              </p>
              <h3 class="mt-4 text-2xl font-bold text-[var(--text)]">{item.name}</h3>
              <p class="mt-3 flex-1 text-sm sm:text-base">{item.description}</p>
              <div class="mt-6 flex items-center justify-between gap-3">
                <p class="text-lg font-bold text-[var(--accent)]">{rupiah.format(item.price)}</p>
                <a class="text-sm font-semibold text-[var(--accent)] transition hover:text-[var(--accent-strong)]" href="#kontak">
                  Pesan meja
                </a>
              </div>
            </div>
          </article>
        </li>
      ))}
    </ul>
    <p class="mt-6 text-sm text-[var(--muted)]">
      Catatan: harga dapat berbeda tergantung cabang dan platform pemesanan.
    </p>
  </div>
</section>
