---
import About from "../components/sections/About.astro";
import FeaturedMenu from "../components/sections/FeaturedMenu.astro";
import FooterCta from "../components/sections/FooterCta.astro";
import Hero from "../components/sections/Hero.astro";
import Navbar from "../components/sections/Navbar.astro";
import Testimonials from "../components/sections/Testimonials.astro";
import { menuItems, navLinks, testimonials } from "../data/landing";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Kopi Senja | Kedai Kopi Lokal Bandung"
  description="Kedai kopi lokal dengan racikan kopi harian, menu andalan, dan suasana nyaman untuk bekerja maupun bersantai."
>
  <Navbar links={navLinks} />
  <main>
    <Hero />
    <FeaturedMenu items={menuItems} />
    <About />
    <Testimonials items={testimonials} />
  </main>
  <FooterCta />
</BaseLayout>
